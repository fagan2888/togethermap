<h2>
    Recent Activity for
    <a href="{{collectionUrl collection._id}}">
        {{ collection.name }}
    </a>
</h2>

<hr>

<h3>
    <i class="fa fa-clock-o">
       Recent Places
    </i>
</h3>

<div class="alternate-colors">

    {{#each recent_places}}

        <div>

            <a href="{{placeUrl ../collection._id _id}}">
                {{{ dynamic_place . collection.place_template }}}
            </a>

            {{{ properties.description }}}

        </div>

    {{/each}}

</div>

{{#if noPlaces }}
    <div>
        No recent places
    </div>
{{/if}}

<hr>

<h3>
    <i class="fa fa-clock-o">
        Recent Posts
    </i>
</h3>

<div class="alternate-colors">

    {{#each recent_posts}}
        <div>
            <h4>
                <a href="{{postUrl collectionId _id}}">
                    {{title}}
                </a>
            </h4>
        </div>
    {{/each}}

</div>

{{#if noPosts }}
    <div>
        No recent posts
    </div>
{{/if}}

<hr>

<h3>
    <i class="fa fa-clock-o">
        Recent Comments
    </i>
</h3>

<div class="alternate-colors">

    {{#each recent_comments}}
        <div>
            <h4>
                <a href="{{postUrl collectionId postId}}">
                    {{{text}}}
                </a>
            </h4>
        </div>
    {{/each}}

</div>

{{#if noComments }}
    <div>
        No recent comments
    </div>
{{/if}}
